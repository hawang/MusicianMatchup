<h1>New band</h1>

<% form_for(@band) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :lookfor_ints %><br />
    <%= f.text_field :lookfor_ints %>
  </p>
  <p>
    <%= f.label :lookfor_gender %><br />
    <%= f.text_field :lookfor_gender %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', bands_path %>